<UserControl x:Class="CommsDemo.Views.Compartment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommsDemo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="80">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CommsDemo;component/Resources/Images/BLANK.bmp"/>
        </Grid.Background>
        <Image x:Name="UpperCompartment" Source="{Binding UpperCompartmentPath}" HorizontalAlignment="Left" Height="28" Margin="5,101,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="65"/>
        <Image x:Name="LowerCompartment" Source="{Binding LowerCompartmentPath}" HorizontalAlignment="Left" Height="28" Margin="5,141,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="65"/>

    </Grid>
</UserControl>
