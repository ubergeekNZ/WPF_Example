<UserControl x:Class="CommsDemo.Views.Units"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommsDemo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="40">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CommsDemo;component/Resources/Images/BLANK.bmp"/>
        </Grid.Background>
        <Image x:Name="UpperCelsius" Source="{Binding UpperCelsiusPath}" HorizontalAlignment="Left" Height="30" Margin="0,61,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="40"/>
        <Image x:Name="UpperFahrenheit" Source="{Binding UpperFahrenheitPath}" HorizontalAlignment="Left" Height="31" Margin="0,90,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="35"/>
        <Image x:Name="LowerCelsius" Source="{Binding LowerCelsiusPath}" HorizontalAlignment="Left" Height="30" Margin="0,141,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="40"/>
        <Image x:Name="LowerFahrenheit" Source="{Binding LowerFahrenheitPath}" HorizontalAlignment="Left" Height="31" Margin="0,171,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="35"/>
    </Grid>
</UserControl>
