<UserControl x:Class="CommsDemo.Views.Humidity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommsDemo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="30">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CommsDemo;component/Resources/Images/BLANK.bmp"/>
        </Grid.Background>
        <Image x:Name="HumidityMin" Source="{Binding HumidityMinPath}" HorizontalAlignment="Left" Height="28" Margin="5,100,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="21"/>
        <Image x:Name="HumidityMax" Source="{Binding HumidityMaxPath}" HorizontalAlignment="Left" Height="28" Margin="5,140,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="21"/>
    </Grid>
</UserControl>
