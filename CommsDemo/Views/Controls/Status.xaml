<UserControl x:Class="CommsDemo.Views.Advanced"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommsDemo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="50">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CommsDemo;component/Resources/Images/BLANK.bmp"/>
        </Grid.Background>
        <Image x:Name="WifiLed" Source="{Binding WifiLedPath}" HorizontalAlignment="Left" Height="35" Margin="7,63,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="35"/>
        <Image x:Name="ErrorLed" Source="{Binding ErrorLedPath}" HorizontalAlignment="Left" Height="35" Margin="7,103,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="35"/>
        <Image x:Name="ShabatLed" Source="{Binding ShabatLedPath}" HorizontalAlignment="Left" Height="40" Margin="7,138,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="35"/>
        <Image x:Name="ServiceLed" Source="{Binding ServiceLedPath}" HorizontalAlignment="Left" Height="40" Margin="7,173,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="35"/>
    </Grid>
</UserControl>
