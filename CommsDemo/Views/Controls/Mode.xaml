<UserControl x:Class="CommsDemo.Views.Mode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommsDemo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="20">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CommsDemo;component/Resources/Images/BLANK.bmp"/>
        </Grid.Background>
        <Image x:Name="WineLed" Source="{Binding WineLedPath}" HorizontalAlignment="Left" Height="29" Margin="-2,64,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="21"/>
        <Image x:Name="PantryLed" Source="{Binding PantryLedPath}" HorizontalAlignment="Left" Height="29" Margin="-2,104,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="21"/>
        <Image x:Name="FridgeLed" Source="{Binding FridgeLedPath}" HorizontalAlignment="Left" Height="29" Margin="-2,144,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="21"/>
        <Image x:Name="ChillLed" Source="{Binding ChillLedPath}" HorizontalAlignment="Left" Height="29" Margin="-2,184,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Width="21"/>
    </Grid>
</UserControl>
